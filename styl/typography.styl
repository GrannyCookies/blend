font = 'Fira Sans', 'Roboto', 'Helvectica Neue', sans-serif
off-black = rgba(black, 0.95)
off-white = rgba(white, 0.95)

body
	touch-callout none
	line-height 1.2
	tap-highlight-color transparent

.text-display-4, h1
	font-size responsive 56px 112px
	font-weight 300
	line-height 1.5
	letter-spacing -5px

.text-display-3, h2
	font-size responsive 34px 56px
	font-weight 400
	line-height 1.4
	letter-spacing normal

.text-display-2, h3
	font-size responsive 24px 45px
	font-weight 400
	line-height 1.3
	letter-spacing normal

.text-display-1, h4
	font-size responsive 20px 34px
	font-weight 400
	letter-spacing normal

.text-headline, h5
	font-size responsive 16px 24px
	font-weight 400
	letter-spacing normal

.text-title, h6
	font-size responsive 14px 20px
	font-weight 500
	line-height 1
	line-height 44px
	letter-spacing normal

.text-subhead
	font-size responsive 12px 16px
	font-weight 400
	line-height 32px
	letter-spacing normal

.text-menu
	font-size responsive 12px 14px
	font-weight 500
	line-height 32px
	letter-spacing normal

.text-button
	font-size responsive 11px 14px
	font-weight 500
	line-height 32px
	letter-spacing normal
	text-transform uppercase

.text-caption
	font-size responsive 8px 12px
	font-weight 400
	line-height 32px
	letter-spacing normal

.text-body, p
	font-size responsive 11px 14px
	font-weight 400
	line-height 1.2
	letter-spacing normal

	max-width 40em
	margin 8px 0

	text-shadow 0 2px 1px rgba(0, 0, 0, 0.05)

a:not(.button):not(.pill)
