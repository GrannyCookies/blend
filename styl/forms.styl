input, textarea
	outline none
	border none
	font inherit

input, textarea
	font-size 18px
	transition 100ms ease-out

	display inline-block

	padding 0.4em 0.6em
	margin-top 0
	margin-right 0
	margin-left 0
	max-width 100%

	@extend .card

	&:active, &:focus
		@extend .with-long-shadow

textarea
	width 50%
	font-size 16px

input[type=file]
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	width 100%
	height 100%
	cursor pointer
	opacity 0
	padding 0
	margin  0
	font-size  0
	z-index 99

@import 'forms-range'

input[type=checkbox]
	width 24px
	height 24px
	padding 0
	margin 8px 0
	position relative
	appearance none

	background-color white
	transition background-color 100ms ease-out

	cursor pointer

	&:hover
		opacity 0.9

	&:before
		font-family 'Material Icons'
		content 'done'
		width 24px
		line-height 24px
		text-align center
		height 24px
		display block
		color white
		transform scale(0)
		transition transform 100ms 100ms ease-out

	&:checked
		background-color rgba(76,175,80,0.9)
		colorOptions()

		&:before
			transform scale(1)
