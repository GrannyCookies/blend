ul
	margin 0
	margin-bottom 1em
	padding 0
	display block
	list-style-type none
	border-radius 2px
	user-select none

	li
		width 100%
		height 72px
		margin 0
		display block

		.material-icons
			display inline-block
			float left
			width 72px
			line-height 72px
			z-index 9
			font-size 24px
			text-align center
			user-select none
			background-color rgba(white, 10%)

		p
			float right
			max-width initial
			margin 0
			padding 0
			height 71px
			width calc(100% - 120px)
			padding-left 48px
			line-height 72px
			display inline-block
			color rgba(off-black, 80%)
			background white
			font-size 21px
			transition background-color 300ms ease-out
			border-bottom 1px solid #eee

			.button
				height 42px
				line-height 42px

		&:hover p
			background-color #eee
